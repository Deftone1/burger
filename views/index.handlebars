<h1>EAT DA BURGER!</h1>

<section class="row">
        <div class="col-md-6 col-left">
            <table>
                {{#each burgers}}
                    {{#unless devoured}}
                        {{> burgers/burger-block}}
                    {{/unless}}
                {{/each}}
            </table>
        </div>
        <div class="col-md-6 col-right">
            {{#each burgers}}
                {{#if devoured}}
                    <div>{{id}}. {{burger_name}}</div>
                {{/if}}
            {{/each}}        
        </div>          
    </section>

<form class="create-form">
    <div class="form-group">
        <label for="name"></label>
        <textarea id="name" name="burger-name" rows="2" cols="40" placeholder="Place burger order here!?"></textarea>
    </div>
    <button type="submit">Add Burger</button>
</form>     
</div>
